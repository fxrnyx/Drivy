                android:fontFamily="@font/adlam_display"
                android:id="@+id/boton_ALCALDIA8"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Iztapalapa"
                android:layout_below="@id/linear_layout"
                android:layout_centerHorizontal="true"
                android:background="@drawable/button_shape"
                android:width="300dp"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:fontFamily="@font/adlam_display"
                android:id="@+id/boton_ALCALDIA9"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Magdalena Contreras"
                android:layout_below="@id/linear_layout"
                android:layout_centerHorizontal="true"
                android:background="@drawable/button_shape"
                android:width="300dp"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:fontFamily="@font/adlam_display"
                android:id="@+id/boton_ALCALDIA10"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Miguel Hidalgo"
                android:layout_below="@id/linear_layout"
                android:layout_centerHorizontal="true"
                android:background="@drawable/button_shape"
                android:width="300dp"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:fontFamily="@font/adlam_display"
                android:id="@+id/boton_ALCALDIA11"
