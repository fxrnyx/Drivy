                android:textSize="18dp"
                android:fontFamily="@font/adlam_display"
                android:id="@+id/boton_ALCALDIA14"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Venustiano Carranza"
                android:layout_below="@id/linear_layout"
                android:layout_centerHorizontal="true"
                android:background="@drawable/button_shape"
                android:width="300dp"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:fontFamily="@font/adlam_display"
                android:id="@+id/boton_ALCALDIA15"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Xochimilco"
                android:layout_below="@id/linear_layout"
                android:layout_centerHorizontal="true"
                android:background="@drawable/button_shape"
                android:width="300dp"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:fontFamily="@font/adlam_display"
                android:id="@+id/boton_ALCALDIA16"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                />

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/barra_inferior"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bottom_bar_gradient"
        android:orientation="horizontal"
        android:gravity="center">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:clickable="true"
            android:focusable="true"
            android:id="@+id/btn_home">

            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/home_icon"
                android:contentDescription="Inicio" />


        </LinearLayout>

        <!-- Segundo botón o icono -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:clickable="true"
            android:focusable="true"
            android:id="@+id/btn_logout">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/log_out"
                android:contentDescription="cerrar sesion"
                android:id="@+id/cerrar_sesion"
                />


        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
